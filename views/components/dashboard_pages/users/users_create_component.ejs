        <!-- Advanced Validation -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Create New User</h2>
                       
                    </div>
                    <div class="body">
                        <form action="/dashboard/users/store" id="form_advanced_validation" method="POST">

                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="name" maxlength="100" minlength="3" required>
                                    <label class="form-label">Name</label>
                                </div>
                                <div class="help-info">Min. 3, Max. 100 characters</div>
                            </div>


                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="email" class="form-control" name="email" required>
                                    <label class="form-label">Email</label>
                                </div>
                                <div class="help-info">Must be email</div>
                            </div>

                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="password" class="form-control" name="password" maxlength="100" minlength="6" required>
                                    <label class="form-label">Password</label>
                                </div>
                                <div class="help-info">Min. 8, Max. 100 characters</div>
                            </div>

                            <div class="form-group form-float">
                                <select class="form-control show-tick" name="role_id">
                                    <option value="">Select Role</option>
                                    <% roles.forEach(function(r){ %>
                                    <option value="<%= r.id %>"><%= r.role_name %></option>
                                    <% }); %>
                                  
                                </select>
                                <div class="help-info">Please select role</div>
                            </div>
                        

                            <button class="btn btn-raised btn-primary waves-effect" type="submit">CREATE</button>

                           
                        </form>
