<%- include('../alerts') %>

 <div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="header">
                <h2>Create New Vehicle</h2>
            </div>
            <div class="body">
                <form id="form_advanced_validation" method="POST" action="/dashboard/vehicles/create">
                    <div class="form-group form-float">
                        <select class="form-control show-tick" name="brand">

                            <% brands.forEach(function(b){ %>
                                <option value="<%= b.id %>"><%= b.brand_name %></option>
                            <% }); %>
                                
                        </select>
                        <div class="help-info">Please select vehicle brand</div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="name" maxlength="100" minlength="3" required>
                            <label class="form-label">Vehicle Name</label>
                        </div>
                        <div class="help-info">Min. 3, Max. 100 characters</div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="license_plate" required>
                            <label class="form-label">License Plate Number</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="vin" required>
                            <label class="form-label">VIN (Vehicle Identification Number)</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="number" class="form-control" name="year" min="1900" max="2100" required>
                            <label class="form-label">Year</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="color" required>
                            <label class="form-label">Color</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="insurance_provider" required>
                            <label class="form-label">Insurance Provider</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="policy_number" required>
                            <label class="form-label">Policy Number</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="number" class="form-control" name="mileage" required>
                            <label class="form-label">Current Mileage</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <select class="form-control show-tick" name="fuel_type">
                            <option value="">Select Fuel Type</option>
                            <option value="petrol">Petrol</option>
                            <option value="diesel">Diesel</option>
                            <!-- Add more options as needed -->
                        </select>
                        <div class="help-info">Please select fuel type</div>
                    </div>

                    <div class="form-group form-float">
                        <input type="number" class="form-control" name="fuel_efficiency" required>
                        <div class="help-info">Enter fuel efficiency (MPG or LPK)</div>
                    </div>

                    <div class="form-group form-float">
                        <input type="number" class="form-control" name="seating_capacity" required>
                        <div class="help-info">Enter seating capacity</div>
                    </div>

                    <div class="form-group form-float">
                        <select class="form-control show-tick" name="transmission">
                            <option value="">Select Transmission</option>
                            <option value="automatic">Automatic</option>
                            <option value="manual">Manual</option>
                            <!-- Add more options as needed -->
                        </select>
                        <div class="help-info">Please select transmission type</div>
                    </div>

                    <!-- Add more fields as needed -->

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="pickup_location" required>
                            <label class="form-label">Pick-up Location</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="dropoff_location" required>
                            <label class="form-label">Drop-off Location</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="contact_person" required>
                            <label class="form-label">Contact Person</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="tel" class="form-control" name="phone_number" required>
                            <label class="form-label">Phone Number</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="email" class="form-control" name="email_address" required>
                            <label class="form-label">Email Address</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <textarea class="form-control" name="additional_features"></textarea>
                        <div class="help-info">List any additional features (separated by commas)</div>
                    </div>

                    <div class="form-group form-float">
                        <textarea class="form-control" name="service_history"></textarea>
                        <div class="help-info">Enter service history details</div>
                    </div>

                    <button class="btn btn-raised btn-primary waves-effect" type="submit">CREATE</button>


                   
                </form>

