<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="header">
                <h2>Buy a Car</h2>
            </div>
            <div class="body">
                <form id="form_advanced_validation" method="POST">

                    <div class="form-group form-float">
                        <select class="form-control show-tick" name="brand">
                            <option value="">Select Vehicle Brand</option>
                            <option value="honda">Honda</option>
                            <option value="toyota">Toyota</option>
                            <!-- Add more options as needed -->
                        </select>
                        <div class="help-info">Please select vehicle brand</div>
                    </div>

                    <div class="form-group form-float">
                        <select class="form-control show-tick" name="name" required>
                            <option value="">Select Vehicle</option>
                            <option value="Honda Civic">Honda Civic</option>
                            <option value="Toyota Camry">Toyota Camry</option>
                            <option value="Ford Mustang">Ford Mustang</option>
                            <option value="Chevrolet Malibu">Chevrolet Malibu</option>
                            <!-- Add more car names as needed -->
                        </select>
                        <div class="help-info">Please select a vehicle</div>
                    </div>
                    

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="license_plate" required>
                            <label class="form-label">License Plate Number</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="vin" required>
                            <label class="form-label">VIN (Vehicle Identification Number)</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="number" class="form-control" name="year" min="1900" max="2100" required>
                            <label class="form-label">Year</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="color" required>
                            <label class="form-label">Color</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <input type="number" class="form-control" name="budget" required>
                        <div class="help-info">Enter your budget</div>
                    </div>

                    <div class="form-group form-float">
                        <select class="form-control show-tick" name="fuel_type">
                            <option value="">Select Fuel Type</option>
                            <option value="petrol">Petrol</option>
                            <option value="diesel">Diesel</option>
                            <!-- Add more options as needed -->
                        </select>
                        <div class="help-info">Please select fuel type</div>
                    </div>

                    <div class="form-group form-float">
                        <input type="number" class="form-control" name="seating_capacity" required>
                        <div class="help-info">Enter desired seating capacity</div>
                    </div>

                    <div class="form-group form-float">
                        <select class="form-control show-tick" name="transmission">
                            <option value="">Select Transmission</option>
                            <option value="automatic">Automatic</option>
                            <option value="manual">Manual</option>
                            <!-- Add more options as needed -->
                        </select>
                        <div class="help-info">Please select transmission type</div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="contact_person" required>
                            <label class="form-label">Contact Person</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="tel" class="form-control" name="phone_number" required>
                            <label class="form-label">Phone Number</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="email" class="form-control" name="email_address" required>
                            <label class="form-label">Email Address</label>
                        </div>
                    </div>

                    <button class="btn btn-raised btn-primary waves-effect" type="submit">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>
</div>
